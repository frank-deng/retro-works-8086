70 GET #1, (QU*94+WEI)+1: FOR J=0 TO 15: V=0
80 POKE VARPTR(V),ASC(MID$(PX$,J*2+2,1)): POKE VARPTR(V)+1,ASC(MID$(PX$,J*2+1,1))
90 IF J>0 THEN PRINT#2,",";
