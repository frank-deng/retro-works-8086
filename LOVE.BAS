10 DEFINT A-Z:DEFDBL P,T:W=30:H=90:Y0=70:DIM G(18*50+2)
20 KEY OFF:SCREEN 1:COLOR ,1:CLS:PI=3.141592654#
30 CIRCLE (160-W,Y0),W,2,-PI*2,-PI,.9:PAINT (160-W,Y0-3),2
40 CIRCLE (160+W,Y0),W,2,-PI*2,-PI,.9:PAINT (160+W,Y0-3),2
50 FOR Y=1 TO H
60 X=INT(W*2*COS(Y*PI/2/H)+.5)
70 LINE (-X+160,Y+Y0)-(X+160,Y+Y0),2
80 NEXT Y
90 VSEG=VARSEG(G(0)):IF VSEG=0 THEN DEF SEG ELSE DEF SEG=VSEG
100 BLOAD "LOVE0.PIC",VARPTR(G(0)):PUT (20,50),G
110 BLOAD "LOVE1.PIC",VARPTR(G(0)):PUT (320-20-70,50),G
120 DEF SEG:WHILE INPUT$(1)="":WEND:SCREEN 0:WIDTH 80:CLS:END
